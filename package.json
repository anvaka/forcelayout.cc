  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anvaka/forcelayout.cc"
  },
  "dependencies": {
    "nangraph.cpp": "^2.0.0",
    "quadtree.cc": "^2.0.0"
  },
  "devDependencies": {
    "catch.cc": "^7.0.0",
    "ngyp": "^1.0.1"
  }
}
